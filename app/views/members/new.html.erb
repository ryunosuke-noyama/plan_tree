<%= render "shared/header2" %>

<div class= 'member_main'>
  <h1 class= 'main-header'>+メンバー</h1>
  <%= form_with model: [@company,@member], class: 'form2', local: true do |f| %>
    <div class="form-input">
      <%= f.text_field :member_name, class: 'form-company', placeholder: '追加するメンバー名を入力してください' , autocomplete: 'off'%>
    </div>
    <%= f.submit '追加', class: 'form-submit' %>
    <%= link_to 'Back', company_path(@company.id), class: 'btn2'%>
  <% end %>
</div>