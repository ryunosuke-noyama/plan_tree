<div class= 'member-main'>
    <h1 class= 'main-header'>メンバーリスト</h1>
    <table class= "member-table">
      <thead class= "member-thead">
        <tr>
          <th class= "member-th">メンバー名</th>
        </tr>
      </thead>
   
      <tbody class= "member-tbody">
        <% if @company.members.present?%>
          <% @company.members.each do |member|%>
          <tr >
            <td class= "member-td"><%= member.member_name %><%= link_to '削除', company_member_path(@company,member.id), method: :delete, class: 'btn' %></td>
          </tr>
          <% end %>
        <% else %>
          <td class= "member-td">登録なし</td>
        <% end %>
      </tbody>
    </table>
    <%= link_to '+メンバー', new_company_member_path(@company), class: 'btn'%>
  </div>