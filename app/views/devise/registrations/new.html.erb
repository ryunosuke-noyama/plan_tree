<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Create Account</h2>
      <h5>新規アカウントの作成</h5>
      <%= link_to "ログインに戻る", :back, class: 'btn'%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
        <%= devise_error_messages!%>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :name, class:'field-area'%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true, class:'field-area'%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email, class:'field-area'%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, class:'field-area'%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password, class:'field-area'%>
            <i>(英数字6文字以上)</i>
          </div>
          <div class='field-input'>
            <%= f.password_field :password, autocomplete: "off", class:'field-area'%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :password_confirmation, class:'field-area'%>
          </div>
          <div class='field-input'>
            <%= f.password_field :password_confirmation, autocomplete: "off", class:'field-area'%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "Create Account", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
